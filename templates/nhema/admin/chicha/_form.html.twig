{{ form_errors(form) }}
{{ form_start(form) }}
    <div class="row mb-1"> 
        
        <div class="col-sm-12 col-md-4">
            {{ form_row(form.nom) }}
        </div>

        <div class="col-sm-12 col-md-6">
            {{ form_row(form.description) }}
        </div>  
    </div>
    <div class="row mb-1"> 
        <div class="col-sm-12 col-md-4">
            {{ form_row(form.prixVente) }}
        </div>
        <div class="col-sm-12 col-md-2">
            {{ form_row(form.etat) }}
        </div>
        <div class="col-sm-12 col-md-4">
            {{ form_row(form.service) }}
        </div>    
    </div>
    <div class="row mb-1"> 
        <div class="col-sm-12 col-md-4">
            {{ form_row(form.image) }}
        </div>    
    </div>
    <button class="btn btn-primary">{{ button_label|default('Ajouter') }}</button>
{{ form_end(form) }}
