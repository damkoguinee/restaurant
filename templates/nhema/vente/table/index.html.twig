{% extends 'base_nhema.html.twig' %}
{% set queryParams = app.request.query.all %}
{% set queryString = queryParams|filter((v, k) => k != "page" and k != "ajustement" and k != "id_stock") | url_encode %}

{% block title %}liste des tables{% endblock %}
{% block bandeau %} {% endblock %}
 {% block carousel %}
    <div id="carouselExampleAutoplaying" class="carousel slide py-2" data-bs-ride="carousel">
    </div>
 {% endblock %}
 {% block categories %} {% endblock %}
 {% block contact %} {% endblock %}
 {% block collaborateurs %} {% endblock %}
 {% block scroll %} {% endblock %}
 {% block footer %} {% endblock %}
 {% block social %} {% endblock %}

{% block produits %}

    <div class="row my-2">
        {% include "_common/_nav_table.html.twig" %}

        <div class="col-sm-12 col-md-10">
            {{ include("_common/_messages_flash.html.twig") }}

            <div class="container-fluid">
				<div class="row">
					<div class="col p-3 bg-success bg-opacity-50  border border-danger border-3 rounded ">
						<legend class="text-center fw-bold">SALLE DU RESTAURANT <a href="{{path('app_nhema_vente_table_new', {lieu_vente: lieu_vente.id, salle: choix_salle}) }}" class="btn btn-sm btn-warning"><i class="fas fa-plus"></i></a></legend>
                        <div class="row m-4 p-4 justify-content-center align-items-center" >
                            {% for table in tables %}
                                <div class="col-sm-6 col-md-3 col-lg-3 m-auto my-4">
                                    <a  class="btn btn-light " href="{{path("app_nhema_vente_table_commande_new", {'lieu_vente' : lieu_vente.id, 'table' : table.id, 'type_vente' : type_vente} )}}">
                                        <div class="card m-0 p-0" style="width: 9rem; height:8rem;">
                                            <img src="{{ asset('images/config/table.jpg') }}" class="card-img-top m-auto" alt="ventes" style="width: 5rem; height: 5rem">
                                            <div class="d-flex justify-content-center align-items-center text-white bg-info m-0 p-0">
                                                {% if table.etat == 'libre' %}
                                                    <img style="border-radius: 50px;" src="{{ asset('images/config/voyantvert.jpg') }}" width="13" height="13" >
                                                {% else %}
                                                    <img style="border-radius: 50px;" src="{{ asset('images/config/voyantrouge.jpg') }}" width="13" height="13" >
                                                {% endif %}
                                                <h5 class="card-title text-center text-white bg-info m-0 p-0">{{table.nom|ucfirst}}</h5>

                                            </div>
                                        </div>
                                    </a>
                                </div>
                            {% endfor %}
                        </div>
					</div>
				</div>
            </div>
        </div>
    </div>
{% endblock %}
