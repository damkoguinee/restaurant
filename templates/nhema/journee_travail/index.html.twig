{% extends 'base_nhema.html.twig' %}
{% set queryParams = app.request.query.all %}
{% set queryString = queryParams|filter((v, k) => k != "page" and k != "ajustement" and k != "id_stock") | url_encode %}

{% block title %}liste des clients{% endblock %}
{% block bandeau %} {% endblock %}
 {% block carousel %}
    <div id="carouselExampleAutoplaying" class="carousel slide py-2" data-bs-ride="carousel">
    </div>
 {% endblock %}
 {% block categories %} {% endblock %}
 {% block contact %} {% endblock %}
 {% block collaborateurs %} {% endblock %}
 {% block scroll %} {% endblock %}
 {% block footer %} {% endblock %}
 {% block social %} {% endblock %}

{% block produits %}

    <div class="row my-2">
        {# {% include "_common/_nav_client.html.twig" %} #}

        <div class="col-sm-12 col-md-10">
            {{ include("_common/_messages_flash.html.twig") }}
            <table class="table table-bordered table-striped table-hover align-middle">
                <thead class="sticky-top bg-light text-center">
                    <tr>
                        <th colspan="8">
                            Liste des jours travaillés
                            <a class="btn btn-warning" href="{{ path('app_nhema_journee_travail_new', {lieu_vente : lieu_vente.id}) }}">Commencez une nouvelle journée</a>
                        </th>
                    </tr>
                    <tr>
                        <th class="bg-info text-white">N°</th>
                        <th class="bg-info text-white">Jour travaillé</th>
                        <th class="bg-info text-white">Statut</th>
                        <th class="bg-info text-white">Saisie Par</th>
                        <th class="bg-info text-white">Date Saisie</th>
                        <th class="bg-info text-white">Clôturer Par</th>
                        <th class="bg-info text-white">Date Cloture</th>
                        <th class="bg-info text-white">actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for key, journee_travail in journee_travails %}
                        <tr>
                            <td class="text-center">{{ key + 1 }}</td>
                            <td class="text-center">{{ journee_travail.jourDeTravail ? journee_travail.jourDeTravail|date('d/m/Y') : '' }}</td>
                            <td class="text-center">{{ journee_travail.statut }}</td>
                            <td>{{ journee_travail.saisiePar.prenom|ucfirst }}</td>
                            <td class="text-center">{{ journee_travail.dateSaisie ? journee_travail.dateSaisie|date('d/m/Y H:i:s') : '' }}</td>
                            <td>{{ journee_travail.cloturerPar ? ( journee_travail.cloturerPar.prenom|ucfirst ) : "" }}</td>
                            <td class="text-center">{{ journee_travail.dateCloture ? journee_travail.dateCloture|date('d/m/Y H:i:s') : '' }}</td>
                            <td class="text-center">
                                <a class="btn btn-success" href="{{ path('app_nhema_journee_travail_show', {'id': journee_travail.id, lieu_vente : lieu_vente.id }) }}"><i class="fa fa-eye"></i></a>
                                <a class="btn btn-warning" href="{{ path('app_nhema_journee_travail_edit', {'id': journee_travail.id, lieu_vente : lieu_vente.id }) }}"><i class="fa fa-edit"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
