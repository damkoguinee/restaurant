{% extends 'base_nhema.html.twig' %}
{% set queryParams = app.request.query.all %}
{% set queryString = queryParams|filter((v, k) => k != "page" and k != "ajustement" and k != "id_stock") | url_encode %}

{% block title %}Détail journée{% endblock %}
{% block bandeau %} {% endblock %}
 {% block carousel %}
    <div id="carouselExampleAutoplaying" class="carousel slide py-2" data-bs-ride="carousel">
    </div>
 {% endblock %}
 {% block categories %} {% endblock %}
 {% block contact %} {% endblock %}
 {% block collaborateurs %} {% endblock %}
 {% block scroll %} {% endblock %}
 {% block footer %} {% endblock %}
 {% block social %} {% endblock %}

{% block produits %}

    <div class="row my-2">
        {# {% include "_common/_nav_client.html.twig" %} #}

        <div class="col-sm-12 col-md-10">
            {{ include("_common/_messages_flash.html.twig") }}
            <h3>Journée du {{journee_travail.jourDeTravail|date('d/m/Y')}}</h3>

            <table class="table table-bordered table-striped table-hover align-middle">
                <tbody>
                    <tr>
                        <th>Jour travaillé</th>
                        <td>{{ journee_travail.jourDeTravail ? journee_travail.jourDeTravail|date('d/m/Y') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Statut</th>
                        <td>{{ journee_travail.statut }}</td>
                    </tr>
                    <tr>
                        <th>Saisie Par</th>
                        <td>{{ journee_travail.saisiePar.prenom|ucfirst }}</td>
                    </tr>
                    <tr>
                        <th>Date de Saisie</th>
                        <td>{{ journee_travail.dateSaisie ? journee_travail.dateSaisie|date('d/m/Y H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Clôturer</th>
                        <td>{{ journee_travail.cloturerPar ? ( journee_travail.cloturerPar.prenom|ucfirst ) : "" }}</td>
                    </tr>
                    <tr>
                        <th>Date de Clôture</th>
                        <td>{{ journee_travail.dateCloture ? journee_travail.dateCloture|date('d/m/Y H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-between">

                <a class="btn btn-light" href="{{ path('app_nhema_journee_travail_index', { lieu_vente : lieu_vente.id}) }}">Retour</a>

                {% if is_granted("ROLE_MODIFICATION") %}
                    <a class="btn btn-warning" href="{{ path('app_nhema_journee_travail_edit', {'id': journee_travail.id, lieu_vente : lieu_vente.id}) }}"><i class="fa fa-edit"></i></a>
                {% endif %}
                {% if is_granted("ROLE_SUPPRESSION") %}
                    {{ include('nhema/journee_travail/_delete_form.html.twig') }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
